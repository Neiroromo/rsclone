<nav class="container-fluid">
  <button type="button" class="btn btn-link header-btn" id="toMainPage">Главная страница</button>
  <button data-toggle="modal" data-target="#myModal" class="btn btn-link text-dark header-btn"
    id="btnLog">Войти</button>
  <div class="dropdown" id='divProfile' hidden>
    <button class="btn btn-link text-dark btn-user header-btn" type="button" id="dropdownMenuButton" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      user
    </button>
    <div class="dropdown-menu p-0 dropdown-menu-right" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item border" href="#" id="profile">профиль</a>
      <a class="dropdown-item border" href="" id="btnExit">выход</a>
    </div>
  </div>
</nav>

<div class="modal" tabindex="-1" role="dialog" id="myModal" aria-labelledby="myModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content login">
      <div class="modal-header">
        <h5 class="modal-title">Войти</h5>
        <span class="text-danger err-message"></span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="authEmail">Email</label>
            <input type="email" aria-required="true" class="form-control" id="authEmail"
              aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="authPassword">Пароль</label>
            <input type="password" class="form-control" id="authPassword">
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
        <button type="button" class="btn btn-primary" id="linkSignin">нет аккаунта?</button>
        <button type="submit" class="btn btn-primary submit-btn btn-confirm" id="btnAuth">Войти</button>

      </div>

    </div>
    <div class="modal-content signin hide-modal">
      <div class="modal-header">
        <h5 class="modal-title">Регистрация</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="regLogin">Имя пользователя</label>
            <input required type="text" class="form-control" id="regLogin" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="regPassword">Пароль</label>
            <input required type="password" class="form-control" id="regPassword">
          </div>
          <div class="form-group">
            <label for="regPasswordConfirm">Подтверждение пароля</label>
            <input required type="password" class="form-control" id="regPasswordConfirm">
          </div>
          <div class="form-group">
            <label for="regEmail">Email</label>
            <input required type="email" class="form-control" id="regEmail" aria-describedby="emailHelp">
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary link-login" id="linkLogin">уже зарегистрированы?</button>

        <button type="submit" class="btn btn-primary btn-confirm" id="btnReg" >Зарегистрироваться</button>
      </div>
    </div>
  </div>
</div>
