<!-- 
    articleName,
    articleDesc - краткое описание статьи
 -->
 
<li class="list-group-item article-item" data-articleID="<%= articleID%>" >
    <input type="checkbox" class="col-1 article-checkbox">
    <div class="col-2 article-name">
        <%= articleName %>
    </div>
    <div class="col-7 article-desc">
        <%= articleDesc%>
    </div>
    <button class="col-1 btn btn-outline-warning article-edit-btn">
        <span class="material-icons">
            create
        </span>
    </button>
    <button class="col-1 btn btn-outline-danger article-delete-btn" data-toggle="modal" data-target="#deleteArticle">
        <span class="material-icons">
            delete
        </span>
    </button>
</li>