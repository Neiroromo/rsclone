<!-- 
    userName,
    changeUserNameBtnTitle - текст кнопки "изменить ник",
    changePasswordBtnTitle - текст кнопки "изменить пароль",
    deleteUserBtnTitle текст кнопки "удалить пользователя",
    createBtnTitle,
    deleteBtnTitle,
    changeUserSettingsTitle - название изменяемого параметра (ник\пароль),
    closeBtnLabel - текст кнопки "закрыть",
    saveBtnLabel - "сохранить",
    deleteBtnLabel "удалить",
    deleteUserDataModalLabel - заголовок модального окна,
    deleteUserDataModalBody - текст внутри модального окна,
    deleteArticleModalLabel,
    deleteArticleModalBody 
-->
    <div class="container py-5 user-profile-container">
        <div class="row align-items-center">
            <div class=" col-sm-5 col-md-3 user-name"><h2>
                <%= userName%>
            </h2></div>
            <div class=" col-sm-1 col-md-1 settings__btn-container">    
                <div class="btn-group">
                <button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons">
                        settings
                    </span>
                </button>
                <div class=" dropdown-menu dropdown-menu-right settings__list">
                    <button class="dropdown-item" type="button" data-toggle="modal" data-target="#exampleModalCenter" onclick="listItemBehavior.changeSettings = 'login'">
                        <%= changeUserNameBtnTitle %>
                    </button>
                    <button class="dropdown-item" type="button" data-toggle="modal" data-target="#exampleModalCenter" onclick="listItemBehavior.changeSettings = 'password'">
                        <%= changePasswordBtnTitle %>
                    </button>
                    <button class="dropdown-item" type="button" data-toggle="modal" data-target="#deleteUser">
                        <%= deleteUserBtnTitle %>
                    </button>
                </div>
            </div>
            </div>
            <div class="col-sm-2 col-md-4"><!--gap--></div>
            <div class=" col-sm-2 col-md-2 main-create-btn-container">
                <button class="btn btn-success main-create-btn" onclick="listItemBehavior.createNewArticle()">
                    <span>
                        <%= createBtnTitle %>
                    </span>
                </button>
            </div>
            <div class=" col-sm-2 col-md-2 main-delete-btn-container">
                <button class="btn btn-danger main-delete-btn" data-toggle="modal" data-target="#deleteArticle" disabled>
                    <span>
                        <%= deleteBtnTitle %>
                    </span>
                </button>
            </div>
        </div>
        <div class="row align-items-center">
            <ul class="list-group py-5 container">
                <!-- вставлять статьи сюда -->
                <%- include('list-group-item',{
                    articleName: 'test',
                    articleDesc: 'test disc',
                    articleID: 123
                })%>
                <%- include('list-group-item',{
                    articleName: 'test2',
                    articleDesc: 'test2 disc',
                    articleID: 222
                })%>
            </ul>
        </div>
        
        <!-- Modal change user settings -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="settingsTitle">
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <!-- поменять поле на более подходящее -->
                        <label for="exampleInputPassword1" id='settingsBody'>
                        </label>
                        <input type="password" class="form-control change-value" id="exampleInputPassword1" placeholder="Value">
                    </div>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="listItemBehavior.changeSettings = ''">
                    <%= closeBtnLabel%>
                </button>
                <button type="button" class="btn btn-primary" onclick="listItemBehavior.changeUserSettings()">
                    <%= saveBtnLabel %>
                </button>
                </div>
            </div>
            </div>
        </div>
    
        <!-- Modal delete user-->
        <div class="modal fade" id="deleteUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <%= deleteUserDataModalLabel%>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <%= deleteUserDataModalBody%>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <%= closeBtnLabel%>
                </button>
                <button type="button" class="btn btn-primary" onclick="listItemBehavior.deleteProfile()">
                    <%= deleteBtnLabel%>
                </button>
                </div>
            </div>
            </div>
        </div>
    
        <!-- Modal delete article-->
        <div class="modal fade" id="deleteArticle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <%= deleteArticleModalLabel%>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <%= deleteArticleModalBody%>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="listItemBehavior.deleteIDFromStack()">
                    <%= closeBtnLabel%>
                </button>
                <button type="button" id="article-delete-btn" class="btn btn-primary" onclick="listItemBehavior.deleteArticlesFromServer()">
                    <%= deleteBtnLabel%>
                </button>
                </div>
            </div>
            </div>
        </div>
    </div>